<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_horarios_linea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/informacion_linea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:text="Parada - Hora"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipo_de_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/informacion_linea"
                android:layout_marginTop="25dp"
                android:text="Tipo de Horario"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/observaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/informacion_linea"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:text="Observaciones"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frecuencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tipo_de_horario"
                android:layout_alignStart="@+id/informacion_linea"
                android:layout_marginBottom="-25dp"
                android:text="Frecuencia" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>